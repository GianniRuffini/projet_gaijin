{% extends 'base-admin.html.twig' %}

{% block title %}Menu categories{% endblock %}

{% block body %}
    <a class="btn-sm btn-success" href="{{ path('admin_category_new') }}">Nouveau</a>
    <h1 class"mt-3">Liste des categories des menus</h1>



    <table class="table" data-sorting="true" data-filtering="true" data-paging="true" data-paging-size="3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Sous Titre</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.titre }}</td>
                <td>{{ category.sousTitre }}</td>
                <td>{{ category.description|striptags|slice(0, 200) ~ '...'  }}</td>
                <td>
                    <a class="btn-sm btn-secondary" style="color: #ECECEC" href="{{ path('admin_category_show', {'id': category.id}) }}"><i class="fa fa-eye" aria-hidden="true"></i></a>
                    <a class="btn-sm btn-secondary" style="color: #ECECEC" href="{{ path('admin_category_edit', {'id': category.id}) }}"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
