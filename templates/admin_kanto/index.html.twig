{% extends 'base-admin.html.twig' %}

{% block title %}Kanto index{% endblock %}

{% block body %}
    <h1>Kanto index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>SousTitre</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for kanto in kantos %}
            <tr>
                <td>{{ kanto.id }}</td>
                <td>{{ kanto.titre }}</td>
                <td>{{ kanto.sousTitre }}</td>
                <td>{{ kanto.description }}</td>
                <td>
                    <a href="{{ path('admin_kanto_show', {'id': kanto.id}) }}">show</a>
                    <a href="{{ path('admin_kanto_edit', {'id': kanto.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_kanto_new') }}">Create new</a>
{% endblock %}
