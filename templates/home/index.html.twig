{% extends 'base.html.twig' %}

{% block title %}
    Accueil
{% endblock %}

{% block body %}
<h2>
{#{% if homeContent.titre is defined and homeContent.titre is not null %}
{{ homeContent.titre }}
</h2>
{% endif %}#}

<div class="row my-5 align-items-center">
        {% if videos|length > 0 %}
            {% for video in videos %}
                <div class="col-12 col-sm-6 col-md-3 col-lg-2 mb-3 mb-lg-3 ">
                    <video width="160" height="120" controls>
                        <source src="{{ asset('videos/' ~ video.videoName ) }}" alt="{{ video.titre }}" type="video/mp4" class="img"></video>
                </div>
                {% endfor %}
            {% else %}
                <div class="col-12">
                    <h4>
                        Aucune photos 
                    </h4>
                </div>
            {% endif %}
    </div>

{% endblock %}
