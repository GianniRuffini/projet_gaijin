{% extends 'base.html.twig' %}

{% block title %}
    Ma liste de voyage
    
{% endblock %}

{% block body %}
    <div>
        <img src="{{ asset('images/photoLocal/carnets-voyage.jpeg') }}" alt="carnet-voyage" style="width: 100%; height: 500px;">
    </div>
    <div class="text-center mb-5 mt-5">
        <h1>Ma liste de voyage</h1>
    </div>

    <div class="container tab-pane fade show active" id="liste" role="tabpanel" aria-labelledby="profile-tab">
        <div class="row">
            <div class="col-12 col-md-6 col-lg-6 mb-4">
                <div class="card" style="margin: auto; background-color: #f5f5ef; box-shadow: 5px 5px 15px rgba(0,0,0,0.9); text-align: center;" id="maCarte"></div>
            </div>
            <div class="col-12 col-md-6 col-lg-6 mb-4">
                <div class="row">
                    {% if app.user.prefectureList|length > 0 %}
                        {% for prefecture in app.user.prefectureList %}
                            <div class="col-12 col-md-6 col-lg-6 mb-4">
                                <div class="card" style="margin: auto; width:270px; background-color: #f5f5ef; box-shadow: 5px 5px 15px rgba(0,0,0,0.9); text-align: center;">
                                    <div class="prefecture" style="" data-titre="{{ prefecture.titre }}" data-longitude="{{ prefecture.longitude }}" data-latitude="{{ prefecture.latitude }}">
                                        <h6 class="mt-2 list-favori">
                                            {{ prefecture.titre }}
                                            <a href="{{ path('deletePrefectureList', { 'id': prefecture.id }) }}">
                                                <i class="fas fa-trash-alt btn btn-danger" aria-hidden="true"></i>
                                            </a>
                                        </h6>

                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <p>
                            Vous n'avez pas de prefecture dans votre liste de voyage
                                                
                        </p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <div style="height:100px"></div>
</div></div>{% endblock %}