<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Gaijin{% endblock %}</title>
    
    <!-- js -->
    <link rel="stylesheet" href="{{ asset( 'js/navbar.js') }}">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" href="https://bootswatch.com/5/slate/bootstrap.css">
    <link rel="stylesheet" href="https://bootswatch.com/5/slate/bootstrap.min.css">
    <link rel="stylesheet" href="https://bootswatch.com/5/slate/_variables.scss">
    <link rel="stylesheet" href="https://bootswatch.com/5/slate/_bootswatch.scss">

    <!--fontawesome-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset( 'css/admin.min.css') }}">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600&display=swap" rel="stylesheet">
    
{% block stylesheets %}{% endblock %}

{% block javascripts %}{% endblock %}
</head>
<body>
<a href="{{ path('home') }}"><img src="{{ asset("images/mon_logo.png") }}" alt="logo" class="logo"></a>
{# Navbar #}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('home') }}">
                        Accueil
                        <span class="visually-hidden">
                            (current)
                        </span>
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="{{ path('guide_de_voyage')}}" role="button" aria-haspopup="true" aria-expanded="false">
                        Guide de voyage
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="{{ path('hebergements')}}">
                            Hébergements
                        </a></li>
                        <li><a class="dropdown-item" href="{{ path('transports')}}">
                            Transports
                        </a></li>
                        <li><a class="dropdown-item" href="{{ path('avions_et_aeroports')}}">
                            Avions et aeroports
                        </a></li>
                        <li><a class="dropdown-item" href="{{ path('budget_et_argent_au_japon')}}">
                            Budget et argent au Japon
                        </a></li>
                        <li><a class="dropdown-item" href="{{ path('cuisine_japonaise')}}">
                            Cuisines Japonaise
                        </a></li>
                        <li><a class="dropdown-item" href="{{ path('decalage_horaire_au_japon')}}">
                            Décalage horaire au Japon
                        </a></li>
                        <li><a class="dropdown-item" href="{{ path('fete_japonaise')}}">
                            Fêtes Japonaise
                        </a></li>
                        <li><a class="dropdown-item" href="{{ path('telephone_et_internet_au_japon')}}">
                            Téléphone et internet au Japon
                        </a></li>
                    </ul>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="{{ path('visite_au_japon')}}" role="button" aria-haspopup="true" aria-expanded="false">
                        Visites au Japon
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">
                            Carte du Japon
                        </a>
                        <a class="dropdown-item" href="#">
                            Kanto
                        </a>
                        <a class="dropdown-item" href="#">
                            Kansai
                        </a>
                        <a class="dropdown-item" href="#">
                            Chubu
                        </a>
                        <a class="dropdown-item" href="#">
                            Hokkaido
                        </a>
                        <a class="dropdown-item" href="#">
                            Okinawa
                        </a>
                        <a class="dropdown-item" href="#">
                            Kyushu
                        </a>
                        <a class="dropdown-item" href="#">
                            Chugoku
                        </a>
                        <a class="dropdown-item" href="#">
                            Shikoku
                        </a>
                        <a class="dropdown-item" href="#">
                            Tohoku
                        </a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="{{ path('societe_et_culture')}}" role="button" aria-haspopup="true" aria-expanded="false">
                        Societe & culture
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">
                            Visas
                        </a>
                        <a class="dropdown-item" href="#">
                            Sortir le soir au Japon
                        </a>
                        <a class="dropdown-item" href="#">
                            Travailler au Japon
                        </a>
                        <a class="dropdown-item" href="#">
                            Religion et spiritualité
                        </a>
                        <a class="dropdown-item" href="#">
                            Contes et legendes
                        </a>
                        <a class="dropdown-item" href="#">
                            Tatouages au Japon
                        </a>
                        <a class="dropdown-item" href="#">
                            Manga
                        </a>
                        <a class="dropdown-item" href="#">
                            Animé
                        </a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="{{ path('communaute_gaijin')}}" role="button" aria-haspopup="true" aria-expanded="false">
                        Communauté Gaijin
                    </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#">
                            Kotaete (quéstions-réponses)
                        </a>
                        <a class="dropdown-item" href="#">
                            Isshoni (compagnon de voyage)
                        </a>
                        {% if is_granted('ROLE_USER') %}
                        <a class="dropdown-item" href="{{ path('profile') }}">
                            Mon espace membre
                        </a>
                        {% endif %}
                    </div>
                </li>
            </ul>
            {% if is_granted('ROLE_USER') %}
            <form class="form-inline my-2 my-lg-0 ">
                <a class="btn btn-secondary" href="{{ path('app_logout') }}">
                    Déconnexion
                </a>
                {% else %}
                <a class="btn btn-secondary" href="{{ path('app_login') }}">
                    Connexion
                </a>
                {% endif %}

                {% if is_granted('ROLE_USER') %}
                <li class="nav-item text-white align-items-center d-flex ms-auto">
                    <span>Bienvenue
                    {% if app.user.pseudo is defined and app.user.pseudo is not null%}
                    {{ app.user.pseudo }}
                    {% elseif app.user.firstname is defined and app.user.firstname is not null %}
                    {{ app.user.firstname}}
                    {% else %}
                    {{ app.user.email}}
                {% endif %}
                    </span>
                </li>
                {% endif %}

                {% if not is_granted('ROLE_USER') %}
                    <a class="btn btn-secondary" href="{{ path('app_register') }}">
                        Inscription
                    </a>
                {% endif %}
            </form>
        </div>
    </div>
</nav>
{# Fin navbar#}


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
{% block body %}{% endblock %}
</body>
</html>
