{% extends 'base-admin.html.twig' %}


{% block title %}Photo index{% endblock %}

{% block body %}
    <h1>Photo index</h1>

    <table class="table" data-sorting="true" data-filtering="true" data-paging="true" data-paging-size="3">
        <thead>
            <tr>
                {#<th>Id</th>#}
                <th>Titre</th>
                <th>Description</th>
                <th>ImageName</th>
                {#<th>ImageSize</th>#}
                {#<th>UpdatedAt</th>#}
                {#<th>actions</th>#}
            </tr>
        </thead>
        <tbody>
        {% for photo in photos %}
            <tr>
                <td>{{ photo.id }}</td>
                <td>{{ photo.titre }}</td>
                <td>{{ photo.description }}</td>
                <td><img src="{{ asset('images/photos/' ~ photo.imageName ) }}" alt="{{ photo.titre }}" class="img-list-admin"></td>
                <td>{{ photo.imageSize }}</td>
                <td>{{ photo.updatedAt ? photo.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('admin_photo_show', {'id': photo.id}) }}">show</a>
                    <a href="{{ path('admin_photo_edit', {'id': photo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_photo_new') }}">Create new</a>
{% endblock %}
